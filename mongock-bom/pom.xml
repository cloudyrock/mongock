<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>mongock</artifactId>
    <groupId>com.github.cloudyrock.mongock</groupId>
    <version>4.0.4.alpha-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>mongock-bom</artifactId>
  <packaging>pom</packaging>
  <name>Mongock BOM</name>
  <description>Mongock dependency management</description>

  <properties>
    <mongock.driver.spring-data-v2.version>4.0.4.alpha-SNAPSHOT</mongock.driver.spring-data-v2.version>
    <mongock.driver.spring-data-v3.version>4.0.4.alpha-SNAPSHOT</mongock.driver.spring-data-v3.version>
    <mongock.driver.mongodb-v3.version>4.0.4.alpha-SNAPSHOT</mongock.driver.mongodb-v3.version>
    <mongock.driver.mongodb-sync-v4.version>4.0.4.alpha-SNAPSHOT</mongock.driver.mongodb-sync-v4.version>
    <mongock.api.version>4.0.4.alpha-SNAPSHOT</mongock.api.version>
    <mongock.spring-v5.version>4.0.4.alpha-SNAPSHOT</mongock.spring-v5.version>
    <mongock.standalone.version>4.0.4.alpha-SNAPSHOT</mongock.standalone.version>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-v3-driver</artifactId>
        <version>${mongock.driver.mongodb-v3.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.mongodb</groupId>
            <artifactId>mongo-java-driver</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-sync-v4-driver</artifactId>
        <version>${mongock.driver.mongodb-sync-v4.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.mongodb</groupId>
            <artifactId>mongodb-driver-sync</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-springdata-v2-driver</artifactId>
        <version>${mongock.driver.spring-data-v2.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-mongodb</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongodb-springdata-v3-driver</artifactId>
        <version>${mongock.driver.spring-data-v3.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-mongodb</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongock-api</artifactId>
        <version>${mongock.api.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongock-standalone</artifactId>
        <version>${mongock.standalone.version}</version>
      </dependency>
      <dependency>
        <groupId>com.github.cloudyrock.mongock</groupId>
        <artifactId>mongock-spring-v5</artifactId>
        <version>${mongock.spring-v5.version}</version>
        <exclusions>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
